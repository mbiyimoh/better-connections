# Supabase Database - Get from https://supabase.com/dashboard/project/[project-ref]/settings/database
# DATABASE_URL: Transaction pooler (port 6543) - used for runtime queries
# IMPORTANT: Must include ?pgbouncer=true to disable prepared statements (required for PgBouncer)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
# DIRECT_URL: Direct connection (port 5432) - used for migrations/schema changes
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres?pgbouncer=true"

# Supabase Auth - Get from https://supabase.com/dashboard/project/hjmppbpunlhdbchbvgag/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://hjmppbpunlhdbchbvgag.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Tavily - Web Search API for Contact Research feature
# Get from https://tavily.com
TAVILY_API_KEY=tvly-your-tavily-key-here

# App URL - Used for generating invite links, OG images, and email URLs
# Local: http://localhost:3333
# Production (Railway): https://bettercontacts.ai
NEXT_PUBLIC_APP_URL=http://localhost:3333

# RSVP Token Secret - Used for signing JWT tokens for RSVP invite links
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
RSVP_TOKEN_SECRET=your-rsvp-token-secret-here

# Google Places & Maps API - For venue photos and embedded maps in M33T events
# Get from https://console.cloud.google.com/apis/credentials
# Enable these APIs: Places API (New), Maps Embed API, Maps JavaScript API
# The Maps Embed API is FREE with unlimited usage
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here
